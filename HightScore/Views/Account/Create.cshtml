@model CreateViewModel


<div class="container mt-5">
    <div class="p-4" style="background-color: #3b3d55; border-radius: 15px; max-width: 600px; margin: auto;">
        <h2 class="mb-4 text-center fs-1">Register</h2>
        <form asp-controller="Account" asp-action="Create" method="post">
            <div asp-validation-summary="All"></div>

            <div class="mb-3 text-center">
                <label asp-for="UserName" class="form-label fs-5">Username</label>
                <input asp-for="UserName" class="form-control mx-auto" style="max-width: 400px;" required>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3 text-center">
                <label asp-for="Email" class="form-label fs-5">Email Address</label>
                <input asp-for="Email" type="email" class="form-control mx-auto" style="max-width: 400px;" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3 text-center">
                <label asp-for="Phone" class="form-label fs-5">Phone Number</label>
                <input asp-for="Phone" type="tel" class="form-control mx-auto" style="max-width: 400px;">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3 text-center">
                <label asp-for="Password" class="form-label fs-5">Password</label>
                <input asp-for="Password" type="password" class="form-control mx-auto" style="max-width: 400px;" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 text-center">
                <label asp-for="ConfirmPassword" class="form-label fs-5">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control mx-auto" style="max-width: 400px;" required>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn-lg btn-success">Register</button>
            </div>
        </form>
    </div>
</div>

