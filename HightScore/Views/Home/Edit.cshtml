@model EditVM


<div class="container">
    <h2 class="mb-4">Edit User</h2>
    <form asp-controller="Home" asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="mb-3">
            <label asp-for="UserName" >Username</label>
            <input asp-for="UserName" class="form-control"></input>
        </div>
        <div class="mb-3">
            <label asp-for="Email" >Email Address</label>
            <input asp-for="Email" class="form-control"></input>
        </div>
        <div class="mb-3">
            <label asp-for="Phone" class="form-label">Phone Number</label>
            <input asp-for="Phone" type="tel" class="form-control">
        </div>

        <div class="card">
            <div class="card-header">
                Update Password
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control"></input>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control"></input>
                </div>
            </div>
        </div>

       
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

