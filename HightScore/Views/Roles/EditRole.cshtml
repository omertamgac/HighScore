@model IdentityRole

<div class="container mt-4" style="color:white;">
    <h2>Edit Role</h2>
    <form asp-action="EditRole" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="roleName">Role Name:</label>
            <input type="text" class="form-control" asp-for="Name" id="roleName" required />
        </div>

        <button type="submit" class="btn btn-success mt-2">Save</button>
        <a class="btn btn-secondary mt-2" asp-action="Index">Cancel</a>
    </form>
</div>
